{
    "name": "Tab Equalizer",
    "version": "3.0.0",
    "description": "6-band equalizer for tab audio.",
    "manifest_version": 3,
    "options_page": "index.html",
    "background": {
        "service_worker": "service_worker.js"
    },
    "permissions": ["storage", "activeTab", "tabCapture", "scripting"],
    "action": {
        "default_title": "Tab Equalizer",
        "default_icon": {
            "16": "assets/logo_16.png",
            "32": "assets/logo_32.png",
            "48": "assets/logo_48.png",
            "128": "assets/logo_128.png"
        }
    },
    "icons": {
        "16": "assets/logo_16.png",
        "32": "assets/logo_32.png",
        "48": "assets/logo_48.png",
        "128": "assets/logo_128.png"
    }
}
