{
    "manifest_version": 2,
    "name": "Equalizer",
    "version": "1.0",
    "description": "Google Chrome Tab Equalizer and General Audio Manager",
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "tabCapture"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "images/get_started16.png",
        "default_popup": "visualizer.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "jquery-3.1.4.min.js", 
                "main.js"
            ]
        }
    ]
}